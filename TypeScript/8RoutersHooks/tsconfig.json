{
    "compilerOptions": {
        "allowJs": true,
        "module": "CommonJS",
        "target": "es2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
		"resolveJsonModule": true,
        "outDir": "out",
        "baseUrl": ".",
        "paths": {
            "@spt-types/*": ["types/*"]
        }
    },
    "lib": [
        "es2020"
    ],
    "include": [
        "src/*",
        "src/**/*"
    ]
}